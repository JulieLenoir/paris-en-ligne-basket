{% extends 'base.html.twig' %}

{% block title %}Ajouter un pari
{% endblock %}

{% block content %}

	<h1>Ajouter un pari
	</h1>
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card shadow-lg p-4">
					<div class="card-body text-center">
						<h2 class="card-title text-primary">
							{{ match.homeTeamName }}<br>
							ðŸ†š<br>
							{{ match.awayTeamName }}<br>
						</h2>
						<p class="text-muted">

							<strong>Date :</strong>
							{{ match.scheduledTime|date('d/m/Y H:i') }}</p>
						<p class="h5">

							<strong>Votre solde :</strong>
							<span class="text-success fw-bold">{{ app.user.solde }}â‚¬</span>
						</p>
					</div>
				</div>

				<div class="card shadow-lg p-4 mt-4">
					<div class="card-body">
						<h4 class="text-center text-dark mb-3">Placer un pari</h4>

						{{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
						<div class="mb-3">
							<label class="form-label fw-bold">Choisissez votre Ã©quipe :</label>
							{% for choix in form.equipe %}
								<div class="form-check">
									{{ form_widget(choix, { 'attr': {'class': 'form-check-input'} }) }}
									{{ form_label(choix, null, { 'attr': {'class': 'form-check-label'} }) }}
								</div>
							{% endfor %}
						</div>


						<div class="mb-3">
							<label class="form-label fw-bold">

								Mise :</label>
							{{ form_widget(form.mise, { 'attr': {'class': 'form-control', 'max': app.user.solde} }) }}
						</div>

						<button type="submit" class="btn btn-success w-100">
							<i class="bi bi-check-circle"></i>
							Valider le pari
						</button>
						{{ form_end(form) }}
					</div>
				</div>

				<div class="text-center mt-3">
					<a href="{{ path('paris_list') }}" class="btn btn-outline-secondary">
						<i class="bi bi-arrow-left"></i>
						Retour
					</a>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
