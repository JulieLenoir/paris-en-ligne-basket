                            <p class="card-text"><strong>üë• Capacit√© :</strong> {{ match.capacity }} places</p>
                            <a href="{{ path('app_matchs_details', {'id': match.gameId}) }}" class="btn btn-info">Voir les d√©tails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<style>
    .match-card {
        transition: transform 0.2s, box-shadow 0.3s;
    }

    .match-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    }

    hr {
        margin: 10px 0;
    }

     .match-card, .past-match-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease-in-out;
        background-color: #f9f9f9;
        border-radius: 12px;
        padding: 15px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    .match-card:hover, .past-match-card:hover {
        transform: translateY(-8px);
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
    }


    .past-match-card {
        border-left: 6px solid #28a745;
        background-color: #f1fdf1;
    }

    .match-card {
        border-left: 6px solid #007bff;
        background-color: #f1f6fd;
    }

    h1.text-gradient {
        background: linear-gradient(90deg, #ff6a00, #ee0979);
